<!-- 投稿一覧 -->
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- 新規投稿 -->
<h2>New book</h2>

<!--エラーメッセージ-->

<!--新規投稿フォーム-->
<%= form_with model: Book.new do |f| %>
  <div class="classlabel">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="classlabel">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="button">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
