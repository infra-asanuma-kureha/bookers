<h1>Editing Book</h1>

<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <div class="errors-box">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<!--更新用フォーム-->
<%= form_with model: @book do |f| %>

  <div class="classlabel <%= 'error-field' if @book.errors[:title].any? %>">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="classlabel <%= 'error-field' if @book.errors[:body].any? %>">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="button">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
