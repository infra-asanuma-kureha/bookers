<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

  <div class="classlabel">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="classlabel">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="button">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", books_path %>

